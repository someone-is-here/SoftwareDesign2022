<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".OperationsFragment">

    <LinearLayout
        android:id="@+id/buttons_layout"
        android:layout_width="369dp"
        android:layout_height="250dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnInverse"
                android:layout_width="95dp"
                android:layout_height="46dp"
                android:layout_margin="2dp"
                android:background="@color/background"
                android:text="1/x"
                android:textColor="@color/scientific_operations"
                android:textSize="18sp"
                android:textAllCaps="false"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnSquare"
                android:layout_width="95dp"
                android:layout_height="46dp"
                android:layout_margin="2dp"
                android:background="@color/background"
                android:text="x^2"
                android:textColor="@color/scientific_operations"
                android:textSize="18sp"
                android:textAllCaps="false"
                app:cornerRadius="36dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnThirdPow"
                android:layout_width="95dp"
                android:layout_height="46dp"
                android:layout_margin="2dp"
                android:background="@color/background"
                android:text="x^3"
                android:textColor="@color/scientific_operations"
                android:textSize="18sp"
                android:textAllCaps="false"
                app:cornerRadius="36dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnPow"
                android:layout_width="95dp"
                android:layout_height="46dp"
                android:layout_margin="2dp"
                android:background="@color/background"
                android:text="y^x"
                android:textColor="@color/scientific_operations"
                android:textSize="18sp"
                android:textAllCaps="false"
                app:cornerRadius="36dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnFactorial"
                android:layout_width="95dp"
                android:layout_height="46dp"
                android:layout_margin="2dp"
                android:background="@color/background"
                android:text="x!"
                android:textColor="@color/scientific_operations"
                android:textSize="18sp"
                android:textAllCaps="false"
                app:cornerRadius="36dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnRoot"
                android:layout_width="95dp"
                android:layout_height="46dp"
                android:layout_margin="2dp"
                android:background="@color/background"
                android:text="âˆšx"
                android:textColor="@color/scientific_operations"
                android:textSize="18sp"
                android:textAllCaps="false"
                app:cornerRadius="36dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnLg"
                android:layout_width="95dp"
                android:layout_height="46dp"
                android:layout_margin="2dp"
                android:background="@color/background"
                android:text="lg"
                android:textColor="@color/scientific_operations"
                android:textSize="18sp"
                android:textAllCaps="false"
                app:cornerRadius="36dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnPow10"
                android:layout_width="95dp"
                android:layout_height="46dp"
                android:layout_margin="2dp"
                android:background="@color/background"
                android:text="10^x"
                android:textColor="@color/scientific_operations"
                android:textSize="18sp"
                android:textAllCaps="false"
                app:cornerRadius="36dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnSin"
                android:layout_width="95dp"
                android:layout_height="46dp"
                android:layout_margin="2dp"
                android:background="@color/background"
                android:text="sin"
                android:textColor="@color/scientific_operations"
                android:textSize="18sp"
                android:textAllCaps="false"
                app:cornerRadius="36dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnCos"
                android:layout_width="95dp"
                android:layout_height="46dp"
                android:layout_margin="2dp"
                android:background="@color/background"
                android:text="cos"
                android:textColor="@color/scientific_operations"
                android:textSize="18sp"
                android:textAllCaps="false"
                app:cornerRadius="36dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnTan"
                android:layout_width="95dp"
                android:layout_height="46dp"
                android:layout_margin="2dp"
                android:background="@color/background"
                android:text="tan"
                android:textColor="@color/scientific_operations"
                android:textSize="18sp"
                android:textAllCaps="false"
                app:cornerRadius="36dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnLn"
                android:layout_width="95dp"
                android:layout_height="46dp"
                android:layout_margin="2dp"
                android:background="@color/background"
                android:text="ln"
                android:textColor="@color/scientific_operations"
                android:textSize="18sp"
                android:textAllCaps="false"
                app:cornerRadius="36dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnSinH"
                android:layout_width="95dp"
                android:layout_height="46dp"
                android:layout_margin="2dp"
                android:background="@color/background"
                android:text="sinh"
                android:textColor="@color/scientific_operations"
                android:textSize="18sp"
                android:textAllCaps="false"
                app:cornerRadius="36dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnCosH"
                android:layout_width="95dp"
                android:layout_height="46dp"
                android:layout_margin="2dp"
                android:background="@color/background"
                android:text="cosh"
                android:textColor="@color/scientific_operations"
                android:textSize="18sp"
                android:textAllCaps="false"
                app:cornerRadius="36dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnTanH"
                android:layout_width="95dp"
                android:layout_height="46dp"
                android:layout_margin="2dp"
                android:background="@color/background"
                android:text="tanh"
                android:textColor="@color/scientific_operations"
                android:textSize="18sp"
                android:textAllCaps="false"
                app:cornerRadius="36dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnPowExp"
                android:layout_width="95dp"
                android:layout_height="46dp"
                android:layout_margin="2dp"
                android:background="@color/background"
                android:text="e^x"
                android:textColor="@color/scientific_operations"
                android:textSize="18sp"
                android:textAllCaps="false"
                app:cornerRadius="36dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnPi"
                android:layout_width="95dp"
                android:layout_height="46dp"
                android:background="@color/background"
                android:text="pi"
                android:textAllCaps="false"
                android:textColor="@color/scientific_operations"
                android:textSize="18sp"
                app:cornerRadius="36dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnExp"
                android:layout_width="95dp"
                android:layout_height="46dp"
                android:layout_margin="2dp"
                android:background="@color/background"
                android:text="exp"
                android:textColor="@color/scientific_operations"
                android:textSize="18sp"
                android:textAllCaps="false"
                app:cornerRadius="36dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn2Pow"
                android:layout_width="95dp"
                android:layout_height="46dp"
                android:layout_margin="2dp"
                android:background="@color/background"
                android:text="2nd"
                android:textColor="@color/scientific_operations"
                android:textSize="18sp"
                android:textAllCaps="false"
                app:cornerRadius="36dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnRand"
                android:layout_width="95dp"
                android:layout_height="46dp"
                android:layout_margin="6dp"
                android:layout_marginStart="308dp"
                android:layout_marginTop="120dp"
                android:background="@color/background"
                android:text="Rand"
                android:textAllCaps="false"
                android:textColor="@color/scientific_operations"
                android:textSize="20dp" />

        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>